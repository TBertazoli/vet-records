<div
  class="modal fade"
  id="viewPetModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title montserrat-regular">You</h2>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form action="/account/pets" method="POST">
          <div class="mb-3">
            <label class="form-label">Pet Type</label>
            <select name="petType">
              <option value="cat">Cat</option>
              <option value="dog">Dog</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Pet Name</label>
            <input type="text" class="form-control" name="petName" />
          </div>
          <div class="mb-3">
            <label class="form-label">Date of Birth</label>
            <input type="date" class="form-control" name="petDateOfBirth" />
          </div>
          <div class="mb-3">
            <label>Breed</label>
            <input type="text" class="form-control" name="breed" />
          </div>
          <button type="submit" class="montserrat-regular bg-black">
            SAVE
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
