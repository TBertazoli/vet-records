<header>
  <%- include('../partials/header') %> <%- include('../partials/navbar') %>
</header>
<body>
  <div class="container-md about bkg">
    <div id="hero-text">
      <h1 class="montserrat-regular">Vaccines</h1>
    </div>
  </div>

  <div class="container-md mt-5">
    <div class="text-center">
      <label class="montserrat-medium">VACCINES</label>
      <h2 class="montserrat-regular">Our list of vaccines selection</h2>
    </div>
  </div>
  <div class="container-md mt-5">
    <div class="row g-0 vaccine">
      <div class="col dogCard">
        <div class="card">
          <img
            class="card-img-top"
            src="../images/pet7.jpeg"
            alt="picture of a cat"
            data-bs-toggle="modal"
            data-bs-target="#dogModal"
            style="cursor: pointer"
          />
          <div class="card-body montserrat-regular">
            <h5>DOG</h5>
          </div>
        </div>
      </div>

      <div class="col catCard">
        <div class="card">
          <img
            class="card-img-top"
            src="../images/pet6.jpeg"
            alt="picture of a cat"
            data-bs-toggle="modal"
            data-bs-target="#catModal"
            style="cursor: pointer"
          />
          <div class="card-body montserrat-regular">
            <h5>CAT</h5>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!----- dog modal-- -->
  <div
    class="modal fade"
    id="dogModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title montserrat-regular">
            List of recomended Vaccines for your Dog
          </h6>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        <div class="modal-body">
          <table class="table vaccineList">
            <thead>
              <tr>
                <th>Vaccine Name</th>
                <th>Description</th>
                <th>Recomended Age</th>
                <th>Booster Frequency</th>
              </tr>
            </thead>
            <tbody>
              <% vaccines.forEach((v)=> { %> <% if (v.species === "dog") { %>
              <tr>
                <td><%= v.vaccineName %></td>
                <td><%= v.description%></td>
                <td><%= v.recommendedAge%></td>
                <td><%= v.boosterFrequency%></td>
              </tr>
              <% } %> <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- end of dog modal -->
  <!---- cat modal ---->
  <div
    class="modal fade"
    id="catModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" style="max-width: 650px">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title montserrat-regular">
            List of recomended Vaccines for your Cat
          </h6>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        <div class="modal-body">
          <table class="table vaccineList">
            <thead>
              <tr>
                <th>Vaccine Name</th>
                <th>Description</th>
                <th>Recomended Age</th>
                <th>Booster Frequency</th>
              </tr>
            </thead>
            <tbody>
              <% vaccines.forEach((v)=> { %> <% if (v.species === "cat") { %>
              <tr>
                <td><%= v.vaccineName %></td>
                <td><%= v.description%></td>
                <td><%= v.recommendedAge%></td>
                <td><%= v.boosterFrequency%></td>
              </tr>
              <% } %> <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- end of cat modal -->
</body>
<footer><%- include('../partials/footer') %></footer>
